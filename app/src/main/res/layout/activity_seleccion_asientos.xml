<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_seleccion_asientos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/colorPrimaryVariant">

    <!-- Título -->
    <TextView
        android:id="@+id/txt_seleccion_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecciona tus Asientos"
        android:textColor="@color/colorSecondary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contador de boletos seleccionados -->
    <TextView
        android:id="@+id/txt_selected_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boletos seleccionados: 0"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/txt_seleccion_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Indicador de pantalla -->
    <TextView
        android:id="@+id/txt_pantalla"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PANTALLA"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@color/colorSecondary"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txt_selected_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView para la grilla de asientos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_asientos_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:padding="8dp"
        android:background="@color/colorPrimaryVariant"
        app:layout_constraintTop_toBottomOf="@id/txt_pantalla"
        app:layout_constraintBottom_toTopOf="@id/legend_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Leyenda -->
    <LinearLayout
        android:id="@+id/legend_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmar_asientos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF4444" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Ocupado"
            android:textColor="@color/colorSecondary"
            android:layout_marginEnd="16dp" />

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Disponible"
            android:textColor="@color/colorSecondary"
            android:layout_marginEnd="16dp" />

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FFEB3B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Seleccionado"
            android:textColor="@color/colorSecondary"/>
    </LinearLayout>

    <!-- Botón confirmar -->
    <Button
        android:id="@+id/btn_confirmar_asientos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmar Asientos"
        android:backgroundTint="@color/colorSecondary"
        android:textColor="@color/black"
        android:enabled="false"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ProgressBar (centrado sobre la grilla cuando carga) -->
    <ProgressBar
        android:id="@+id/progress_asientos"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recycler_asientos_grid"
        app:layout_constraintBottom_toBottomOf="@id/recycler_asientos_grid"
        app:layout_constraintStart_toStartOf="@id/recycler_asientos_grid"
        app:layout_constraintEnd_toEndOf="@id/recycler_asientos_grid" />

</androidx.constraintlayout.widget.ConstraintLayout>
