<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryVariant">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtSucursal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selección de Asientos"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Pantalla -->
        <TextView
            android:id="@+id/txtPantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PANTALLA"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@android:color/white"
            android:padding="8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toTopOf="@id/recycler_asientos"/>

        <!-- Grid de Asientos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_asientos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtPantalla"
            app:layout_constraintBottom_toTopOf="@id/txtBoletos"/>

        <!-- Contador de boletos -->
        <TextView
            android:id="@+id/txtBoletos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boletos seleccionados: 0"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/recycler_asientos"
            app:layout_constraintBottom_toTopOf="@id/leyenda"/>

        <!-- Leyenda -->
        <LinearLayout
            android:id="@+id/leyenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtBoletos"
            app:layout_constraintBottom_toTopOf="@id/btn_confirmar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocupado"
                android:textColor="@android:color/white"
                android:background="#FF0000"
                android:padding="4dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textColor="@android:color/white"
                android:background="#AAAAAA"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Botón confirmar -->
        <Button
            android:id="@+id/btn_confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Asientos"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
