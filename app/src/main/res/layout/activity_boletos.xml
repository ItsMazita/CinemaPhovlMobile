<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/colorSecondary"
        app:itemTextColor="@color/colorSecondary"
        app:itemTextAppearance="@style/DrawerText"
        app:menu="@menu/drawer_menu" />

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryVariant"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtSucursal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gestión de Boletos"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Total -->
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0 MXN"
            android:textColor="@color/colorSecondary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:layout_marginTop="16dp" />

        <!-- Contenedor de boletos -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/txtTotal"
            app:layout_constraintBottom_toTopOf="@id/btn_continuar"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/boletos_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Bloque Niños -->
                <include layout="@layout/item_boleto_ninos"/>
                <!-- Bloque Adultos -->
                <include layout="@layout/item_boleto_adultos"/>
                <!-- Bloque Estudiantes -->
                <include layout="@layout/item_boleto_estudiantes"/>
                <!-- Bloque Mayores -->
                <include layout="@layout/item_boleto_mayores"/>
            </LinearLayout>
        </ScrollView>

        <!-- Botón continuar -->
        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar a Selección de Asientos"
            android:background="@color/colorSecondary"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
