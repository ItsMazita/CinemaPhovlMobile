<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/txtTipoMayores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mayores"
        android:textColor="@color/colorSecondary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPrecioMayores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$60 c/u"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnRestarMayores"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:background="@color/colorSecondary"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtCantidadMayores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSumarMayores"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:background="@color/colorSecondary"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtSubtotalMayores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: $0 MXN"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />
</LinearLayout>
